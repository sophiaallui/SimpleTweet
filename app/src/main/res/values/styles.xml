<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="EditTextHint" parent="TextAppearance.AppCompat">
        <item name="colorAccent">#00ACEE</item>
        <item name="android:textColorHint">#E1E8ED</item>
        <item name="colorControlNormal">#E1E8ED</item>
        <item name="colorControlActivated">#E1E8ED</item>
        <item name="colorControlHighlight">#00ACEE</item>
    </style>

    <style name="Theme.App.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">#00ACEE</item>
        <item name="colorControlActivated">#FA00435D</item>
        <item name="colorControlHighlight">#00ACEE</item>
    </style>

</resources>
